#   import hashlib
#   hashlib.sha256("sua_senha".encode()).hexdigest()
#
# Ou use o painel de Debug apos fazer login com a senha padrao.
#
# Senha padrao abaixo: "admin" (MUDE EM PRODUCAO!)
[auth]
username = "admin"
password_hash = "8c6976e5b5410415bde908bd4dee15dfb167a9c873fc4bb8a81f6f2ab448a918"

# ============================================================================
# Configuracao SMTP (Gmail)
# ============================================================================
# Para usar Gmail:
# 1. Ative verificacao em 2 etapas na sua conta Google
#    https://myaccount.google.com/security
# 2. Gere uma "Senha de App" em:
#    https://myaccount.google.com/apppasswords
# 3. Use a senha de app gerada (16 caracteres sem espacos)
[smtp]
server = "smtp.gmail.com"
port = 587
email = "seuemail@gmail.com"
app_password = "xxxx xxxx xxxx xxxx"

# ============================================================================
# Configuracao do App
# ============================================================================
[app]
# URL base da aplicacao (usado para gerar links nos emails)
# Em producao, altere para sua URL real (ex: https://quotecraft.seudominio.com)
base_url = "http://localhost:8501"

# Dias de validade dos tokens de visualizacao de orcamentos
token_expiry_days = 30

# Modo debug (ativa painel de debug e logging detalhado)
# DESATIVE em producao: debug = false
debug = true
